<!DOCTYPE html>
<html>
<head>
  <title>Todo</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container-fluid">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="jumbotron text-center">
      <h1>My ToDo</h1>
        <%= link_to 'New task', new_task_path,  class: 'btn btn-danger btn-lg', data: { toggle: "modal", target: "#modal"}, remote: true %>
    </div>
  </div>
  <%= yield %>
</div>

</body>
</html>
